{% for status, notice in notices %}
    {% if status == 'success' %}
        <div id="close-message">
    {% endif %}
    {% if status != 'danger' %}
        {% set dismissClass = 'alert-dismissible fade show' %}
    {% endif %}
    <div class="alert alert-{{ status }} d-flex align-items-center{{ whitespace(dismissClass)|raw }}" role="alert">
        <ul class="alert-item block" style="list-style: none;">
            <li>
                {{ notice|join('</li><li>')|raw }}
            </li>
        </ul>
        {% if dismissClass %}
            <button type="button" class="btn-close close" data-dismiss="alert" data-bs-dismiss="alert" aria-label="Close"></button>
        {% endif %}
    </div>
    {% if status == 'success' %}
        </div>
    {% endif %}
{% endfor %}
